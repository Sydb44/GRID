<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
    
    <appSettings>
        <!-- Claude API Configuration -->
        <add key="ClaudeAPIKey" value="" />
        <add key="ClaudeAPIBaseURL" value="https://api.anthropic.com" />
        <add key="ClaudeModel" value="claude-3-sonnet-20240229" />
        <add key="ClaudeMaxTokens" value="4096" />
        <add key="ClaudeTemperature" value="0.1" />
        
        <!-- Communication Configuration -->
        <add key="SEModCommunicationPath" value="C:\Users\%USERNAME%\AppData\Roaming\SpaceEngineers\Storage\GRID_Communication" />
        <add key="RequestTimeout" value="15000" />
        <add key="MaxConcurrentRequests" value="10" />
        
        <!-- Performance Configuration -->
        <add key="ResponseTimeTarget" value="1200" />
        <add key="MaxRequestSize" value="1048576" />
        <add key="CacheSize" value="1000" />
        
        <!-- Logging Configuration -->
        <add key="LogLevel" value="Info" />
        <add key="EnableDetailedLogging" value="true" />
        <add key="LogPath" value="logs" />
        
        <!-- Application Configuration -->
        <add key="ApplicationName" value="ClaudeBridge" />
        <add key="ApplicationVersion" value="1.0" />
        <add key="EnableTesting" value="true" />
    </appSettings>
    
    <system.net>
        <defaultProxy enabled="true" useDefaultCredentials="true" />
    </system.net>
</configuration>
